


<div class="container">

  <div class="row">
    <div class="col-sm-6">
      <h1 class="headline">Contact Us</h1>
    </div><!-- end col -->
  </div><!-- end row -->

  <div class="row">
    <div class="col-sm-6">

    <%= flash[:notice] %>

    <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
    <div class="row">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
      </div>
    </div>
    <%= form.submit "Send", class: "form_label roundish-style submit-mail-btn" %>
    <% end %>
  </div><!-- end col -->
</div><!-- end row -->
</div><!-- end container -->
