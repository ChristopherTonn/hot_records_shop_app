<p id="notice"><%= notice %></p>
<div class="wrapper-product-show">

  <div class="container">
    <div class="row">

      <!-- Left Card-->
      <div class="col-md-3">
        <p>

          <h5><%= @product.name %></h5>
        </p>
        <p>
          <div class="rated" data-score="<%= @product.average_rating %>">
          </div>
        </p>
        <p class="product-description">
          <%= @product.description %>
        </p>


      </div>


      <!-- Image-->
      <div class="col-md-6">
        <%= image_tag( @product.image_url, class: "img-responsive img-show") %>
      </div>

      <!-- Right Card-->
      <div class="col-md-3 pull-right">

        <div class="right-card-wrapper">
        <p class="section">
          <p class="label">Price:</p>
          <%= @product.price %> â‚¬
        </p>

        <p class="section">
          <p class="label">Label:</p>
          <%= @product.music_label %>
        </p>

        <p class="section">
          <p class="label">Release Date:</p>
          <%= @product.release_date %>
        </p>

      </div>
      </div>



    </div><!-- end row-->

    <div class="row">
      <div class="col-md-6">

        <%= render "new_comment" %>

        <%= render "comments" %>


      </div>
    </div>

    <div class="row">
      <div class="col-md-6">

        <!-- render comments paginate-->
        <%= will_paginate @comments %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">

        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>

      </div>
    </div>



  </div><!-- end container-->











</div>
