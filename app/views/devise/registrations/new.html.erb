<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-centered sign-up-card">

      <h2 class="headline-sign-up">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field container">
        <div class="row">
          <div class="col-sm-12 col-md-6 field-line">
            <%= f.label :email, "Email:", class: "pull-left field-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
          </div>
        </div>
      </div>

      <div class="field container">
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <%= f.label :password, "Password:", class: "pull-left field-label" %>
            <%= f.password_field :password, autocomplete: "off", class: "field-input" %>
          </div>
        </div>
      </div>

      <div class="field container">
        <div class="row">
          <div class="col-sm-12 col-md-6">
        <%= f.label :password_confirmation, "Password confirmation:", class: "pull-left field-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "field-input" %>
      </div>
    </div>
  </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "roundish-style sign-up-btn" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
